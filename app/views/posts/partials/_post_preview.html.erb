<div class="box mt-2">
  <article class="media">
    <div class="media-content">
      <div class="content">
        <p>
          <strong><%= link_to("r/#{post.community}",  subreddit_path(post.community)) %></strong>
          <br>
          <strong>
            <%= link_to(post.title, subreddit_post_path(subreddit_slug: post.community, id: post.slug), class: 'post-body-link has-text-white') %>
          </strong><small> by u/<%= post.username %> </small>
          <small><%= time_ago_in_words(post.created_at) %> ago</small>
          <br>
          <%= link_to(post.body.to_plain_text.truncate(200, separator: '...'), subreddit_post_path(subreddit_slug: post.community, id: post.slug), class: 'post-body-link') %>
        </p>
        <nav class="level is-mobile">
          <div class="level-left">
            <%= render partial: 'posts/partials/upvote', locals: { post: post } %>
            <span class="tag level-item"> ðŸ’¬ <%= number_to_human(post.comments_count) %> </span>
          </div>
        </nav>
      </div>
    </div>
  </article>
</div>
