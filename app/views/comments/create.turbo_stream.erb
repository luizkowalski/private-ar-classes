<%= turbo_stream.prepend "comments--prepend" do %>
  <%= render partial: 'comments/partials/comment', locals: { comment: @comment } %>
<% end %>

<%= turbo_stream.replace("total-comments-#{@comment.post_id}") do %>
  <%= render partial: 'comments/partials/counter', locals: { post: @post } %>
<% end %>
